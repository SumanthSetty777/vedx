<body class="container mt-5" style="background-color:#FAEBD7;">
  <div class="row">
    <div class="col-10">
      <h1 class="mb-4">Add A Product</h1>
    </div>
    <div class="col-2">
      <a href="/products"><button class="btn btn-light">Back</button></a>
    </div>
  </div>

  <form action="/productNew" method="POST">
    <div class="form-group row">
      <label for="" class="col-sm-2 col-form-label">Product Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="productTitle" value="" >
      </div>
    </div>
    <div class="form-group row">
      <label for="" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="productDescription" value="" id="">
      </div>
    </div>

    <button class="btn btn-light" type="submit">Confirm</button>
  </form>
